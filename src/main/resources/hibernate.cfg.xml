<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.bytecode.use_reflection_optimizer">false</property>
        <property name="hibernate.connection.driver_class">org.mariadb.jdbc.Driver</property>
        <property name="hibernate.connection.password">helloingob</property>
        <property name="hibernate.connection.username">shopper</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/shopper</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MariaDBDialect</property>
        <property name="hibernate.search.autoregister_listeners">true</property>
        <property name="hibernate.validator.apply_to_ddl">false</property>
        <mapping class="com.helloingob.shopify.data.beans.Order"/>
        <mapping class="com.helloingob.shopify.data.beans.Shop"/>
        <mapping class="com.helloingob.shopify.data.beans.Product"/>
        <mapping class="com.helloingob.shopify.data.beans.WatchedProduct"/>
    </session-factory>
</hibernate-configuration>
